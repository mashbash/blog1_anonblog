<style type="text/css">
  .container {
    margin: 20px auto;
    width: 600px;
    padding: 0px 20px 20px 20px;
    border: 1px dotted black;
  }

</style>

<div class="container">
  <h1>Welcome to My Blog!</h1>
  <form name="newpost" action="/post/new" method="get">
  <input type="submit" value="Create New Post">
  </form>
  <% @posts.each do |post| %>
  <h2><a href="/post/<%= post.id %>"><%= post.title %></a> </h1>
  <p><%= post.content %> </p>
  <% end %>

</div>
